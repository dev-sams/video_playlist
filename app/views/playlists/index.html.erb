<h1 class="text-center my-4">Playlists</h1>
<div class="container">
  <%= link_to 'New Playlist', new_playlist_path, class: 'btn btn-primary mb-3' %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @playlists.each do |playlist| %>
        <tr>
          <td><%= playlist.name %></td>
          <td><%= link_to 'View Videos', videos_path(playlist_id: playlist.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
